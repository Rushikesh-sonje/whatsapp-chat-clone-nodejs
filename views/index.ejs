<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All-Chats</title>
    <style>
      body {
        font-family: "Poppins", sans-serif;
        background-color: #f2f3f7;
        margin: 0;
        padding: 0;
      }

      h1 {
        text-align: center;
        padding: 20px 0;
        background-color: #00a884;
        color: white;
        margin: 0;
      }

      .chat-container {
        width: 90%;
        max-width: 600px;
        margin: 30px auto;
        display: flex;
        flex-direction: column;
        gap: 15px;
      }

      .chat {
        background-color: white;
        border-radius: 10px;
        padding: 15px 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 70%;
        word-wrap: break-word;
      }

      .from-me {
        align-self: flex-end;
        background-color: #dcf8c6;
      }

      .from-other {
        align-self: flex-start;
        background-color: #ffffff;
      }

      .chat p {
        margin: 5px 0;
        font-size: 15px;
      }

      .chat .from {
        font-weight: bold;
        color: #00a884;
      }

      .chat .to {
        font-size: 13px;
        color: #555;
      }

      .chat .time {
        font-size: 12px;
        color: gray;
      }

      button {
        margin-top: 10px;
        background-color: #00a884;
        border: none;
        color: white;
        padding: 6px 12px;
        border-radius: 6px;
        cursor: pointer;
      }

      form {
        display: inline-block;
      }

    
      .add-chat-container {
        text-align: center;
        margin-top: 40px;
        margin-bottom: 30px;
      }

      @media (max-width: 600px) {
        .chat-container {
          width: 95%;
        }
      }
    </style>
  </head>

  <body>
    <h1>Chats</h1>

    <div class="chat-container">
      <% for (let ch of chat) { %>
        <div class="chat <%= ch.from === 'Rushikesh' ? 'from-me' : 'from-other' %>">
          <p class="from">From: <%= ch.from %></p>
          <p><%= ch.msg %></p>
          <p class="to">To: <%= ch.to %></p>

          <!-- Created and Updated times -->
          <p class="time">Created: <%= ch.createdAt.toLocaleString() %></p>
          <% if (ch.updatedAt && ch.updatedAt.getTime() !== ch.createdAt.getTime()) { %>
            <p class="time">Updated: <%= ch.updatedAt.toLocaleString() %></p>
          <% } %>

          <form method="GET" action="/chats/<%= ch._id %>/edit">
            <button>Edit</button>
          </form>
          <form method="GET" action="/chats/<%= ch._id %>">
            <button>Delete</button>
          </form>
        </div>
      <% } %>
    </div>

    
    <div class="add-chat-container">
      <form method="GET" action="/chats/new">
        <button>Add Chat</button>
      </form>
    </div>
  </body>
</html>
